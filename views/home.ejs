<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
   <h1>Url shortner</h1>
   <div>
    <% if (locals.id) { %>
        <p>URL GENERATED: http://localhost:8001/URL/<%= id %></p>
    <% } %>
    
    <form action="/URL" method="post">
        <label for="url" >URL</label>
        <input type="text" name="url" placeholder="http://example.com">
        <button type="submit">Generate</button>
    </form>
   </div>
   <% if (locals.urls) { %>
    <table border="1">
        <thead>
            <tr>
                <th>S.No</th>
                <th>ShortID</th>
                <th>Redirect URL</th>
                <th>Clicks</th>
            </tr>
        </thead>
        <tbody>
            <% locals.urls.forEach((url, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= url.shortId %></td>
                    <td><%= url.redirectUrl %></td>
                    <td><%= url.visitHistory ? url.visitHistory.length : 0 %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
<% } %>


</body>
</html>